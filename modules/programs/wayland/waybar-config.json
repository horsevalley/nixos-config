[
  {
    "layer": "top",
    "position": "top",
    "height": 30,
    "modules-left": [
      "hyprland/workspaces",
      "custom/media"
    ],
    "modules-center": ["clock"],
    "modules-right": [
      "pulseaudio",
      "network",
      "cpu",
      "memory",
      "temperature",
      "backlight",
      "battery",
      "tray"
    ],
    "hyprland/workspaces": {
      "format": "{name}",
      "on-click": "activate",
      "sort-by-number": true
    },
    "clock": {
      "format": "{:%H:%M}",
      "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
      "format": "CPU {usage}%"
    },
    "memory": {
      "format": "RAM {}%"
    },
    "temperature": {
      "critical-threshold": 90,
      "format": "{temperatureC}Â°C"
    },
    "backlight": {
      "format": "Light {percent}%"
    },
    "battery": {
      "format": "Bat {capacity}%"
    },
    "network": {
      "format-wifi": "WiFi ({signalStrength}%)",
      "format-ethernet": "Eth",
      "format-disconnected": "Disconnected"
    },
    "pulseaudio": {
      "format": "Vol {volume}%",
      "on-click": "pulsemixer"
    },
    "custom/media": {
      "format": "{}",
      "exec": "mediaplayer",
      "interval": 1
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10
    }
  }
]
